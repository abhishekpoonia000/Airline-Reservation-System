package airline;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.util.Scanner;

public class CancelFlight {

    public static void cancelFlight() {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("===== Cancel Flight =====");
        System.out.print("Enter Flight Number to cancel: ");
        String flightNumber = scanner.nextLine();
        
        try {
            Connection connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/airline", "root", "password");
            String sql = "DELETE FROM flights WHERE flight_number=?";
            PreparedStatement statement = connection.prepareStatement(sql);
            statement.setString(1, flightNumber);
            
            int rowsDeleted = statement.executeUpdate();
            if (rowsDeleted > 0) {
                System.out.println("Flight " + flightNumber + " has been canceled successfully.");
            } else {
                System.out.println("Flight not found.");
            }
            
            connection.close();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
